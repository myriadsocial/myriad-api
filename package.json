{
  "name": "myriad-api",
  "version": "0.1.0",
  "description": "myriad-api",
  "engines": {
    "node": ">=10.16",
    "yarn": ">=1.21.1"
  },
  "private": true,
  "license": "UNLICENSED",
  "author": "Myriad Dev Team <myriad.dev@blocksphere.id>",
  "homepage": "https://myriad.social",
  "repository": {
    "type": "git",
    "url": "https://github.com/myriadsocial/myriad-api.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "lint": "yarn run eslint && yarn run prettier:check",
    "lint:fix": "yarn run eslint:fix && yarn run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "yarn run prettier:cli -l",
    "prettier:fix": "yarn run prettier:cli --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "yarn run eslint --fix",
    "pretest": "yarn run rebuild",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "yarn run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && yarn run posttest",
    "docker:build": "./.maintain/docker/build-image.sh",
    "docker:run": "./.maintain/docker/start-docker-compose.sh",
    "docker:down": "./.maintain/docker/stop-docker-compose.sh",
    "premigrate": "yarn run build",
    "migrate": "node ./dist/migrate",
    "preopenapi-spec": "yarn run build",
    "openapi-spec": "node ./dist/openapi-spec",
    "prestart": "yarn run rebuild",
    "start": "node -r source-map-support/register .",
    "clean": "lb-clean dist *.tsbuildinfo .eslintcache",
    "rebuild": "yarn run clean && yarn run build"
  },
  "dependencies": {
    "@acala-network/api": "^1.0.1",
    "@loopback/authentication": "^7.3.1",
    "@loopback/authentication-jwt": "^0.9.1",
    "@loopback/boot": "^3.4.1",
    "@loopback/core": "^2.16.1",
    "@loopback/repository": "^3.7.0",
    "@loopback/rest": "^9.3.1",
    "@loopback/rest-explorer": "^3.3.1",
    "@loopback/service-proxy": "^3.2.1",
    "@polkadot/api": "^4.16.2",
    "bcryptjs": "^2.4.3",
    "bn.js": "^5.2.0",
    "dotenv": "^10.0.0",
    "firebase-admin": "^9.9.0",
    "isemail": "^3.2.0",
    "loopback-connector-mongodb": "^6.0.1",
    "loopback-connector-rest": "^4.0.1",
    "loopback4-migration": "^1.2.1",
    "tslib": "^2.0.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@loopback/build": "^6.4.1",
    "@loopback/eslint-config": "^10.2.1",
    "@loopback/testlab": "^3.4.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^10.17.60",
    "@types/twitter": "^1.7.0",
    "eslint": "^7.28.0",
    "source-map-support": "^0.5.19",
    "typescript": "~4.3.2"
  }
}
