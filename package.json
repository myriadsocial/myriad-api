{
  "name": "myriad-api",
  "version": "1.1.0",
  "description": "myriad-api",
  "private": true,
  "license": "AGPL-3.0",
  "author": "Myriad Dev Team <myriad.dev@blocksphere.id>",
  "homepage": "https://myriad.social",
  "repository": {
    "type": "git",
    "url": "https://github.com/myriadsocial/myriad-api.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "clean": "lb-clean dist *.tsbuildinfo .eslintcache",
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "rebuild": "yarn run clean && yarn run build",
    "eslint:cli": "lb-eslint",
    "eslint:check": "yarn run eslint:cli --report-unused-disable-directives .",
    "eslint:fix": "yarn run eslint:cli --fix .",
    "prettier:cli": "lb-prettier",
    "prettier:check": "yarn run prettier:cli -l .",
    "prettier:fix": "yarn run prettier:cli --write .",
    "lint": "yarn run eslint:check && yarn run prettier:check",
    "lint:fix": "yarn run eslint:fix && yarn run prettier:fix",
    "pretest": "yarn run rebuild",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "yarn run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && yarn run posttest",
    "docker:build": "./.maintain/docker/build-image.sh",
    "docker:run": "./.maintain/docker/start-docker-compose.sh",
    "docker:down": "./.maintain/docker/stop-docker-compose.sh",
    "premigrate": "yarn run build",
    "migrate": "node ./dist/migrate",
    "preairdrop": "yarn run build",
    "airdrop": "node ./dist/airdrop",
    "preopenapi-spec": "yarn run build",
    "openapi-spec": "node ./dist/openapi-spec",
    "prestart": "yarn run rebuild",
    "start": "node -r source-map-support/register .",
    "start:watch": "tsc-watch --outDir ./dist --onSuccess \"node .\"",
    "start:docker": "node ."
  },
  "dependencies": {
    "@loopback/authentication": "^8.0.0",
    "@loopback/authentication-jwt": "^0.10.0",
    "@loopback/boot": "^4.0.0",
    "@loopback/core": "^3.0.0",
    "@loopback/cron": "^0.7.0",
    "@loopback/health": "^0.9.0",
    "@loopback/repository": "^4.0.0",
    "@loopback/rest": "^11.0.0",
    "@loopback/rest-explorer": "^4.0.0",
    "@loopback/service-proxy": "^4.0.0",
    "@polkadot/api": "^6.8.1",
    "@sentry/node": "^6.16.1",
    "@sentry/tracing": "^6.16.1",
    "a-nonce-generator": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.0",
    "firebase-admin": "^10.0.0",
    "loopback-connector-kv-redis": "^3.0.0",
    "loopback-connector-mongodb": "^6.1.0",
    "loopback-connector-rest": "^4.0.1",
    "loopback4-ratelimiter": "^4.0.0",
    "multer": "^1.4.4",
    "open-graph-scraper": "^4.10.0",
    "sharp": "^0.29.3",
    "tslib": "^2.0.0",
    "tweetnacl": "^1.0.3",
    "uuid": "^8.3.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@loopback/build": "^8.0.0",
    "@loopback/eslint-config": "^12.0.0",
    "@loopback/testlab": "^4.0.0",
    "@sentry/typescript": "^5.20.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cli-progress": "^3.9.2",
    "@types/express-serve-static-core": "^4.17.26",
    "@types/inquirer": "^8.1.3",
    "@types/log4js": "^2.3.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.16",
    "@types/open-graph-scraper": "^4.8.1",
    "@types/sharp": "^0.29.4",
    "@types/twitter": "^1.7.0",
    "@types/uuid": "^8.3.3",
    "@types/validator": "^13.6.6",
    "ansi-colors": "^4.1.1",
    "cli-progress": "^3.10.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.4",
    "inquirer": "^8.2.0",
    "lint-staged": ">=12.3.3",
    "log4js": "^6.4.0",
    "source-map-support": "^0.5.20",
    "tsc-watch": "^4.5.0",
    "typescript": "~4.5.2"
  }
}
